<?xml version="1.0" encoding="utf-8"?>
<manifest>
  <control
    namespace="DynamiX"
    constructor="HiddenSortGrid"
    version="1.0.0"
    display-name-key="Hidden_Sort_Grid_Display"
    description-key="Hidden_Sort_Grid_Desc"
    control-type="virtual">

    <data-set
      name="Items"
      display-name-key="Items_Display"
      cds-data-set-options="displayCommandBar:true;displayViewSelector:true;displayQuickFind:true" />

    <!-- ============ MakerSettings ============ -->

    <property
      name="hideSortingColumn"
      display-name-key="Hide_Sorting_Column_Display"
      description-key="Hide_Sorting_Column_Desc"
      of-type="TwoOptions"
      usage="input"
      required="false"
      default-value="true" />

    <property
      name="editableGrid"
      display-name-key="Editable_Grid_Display"
      description-key="Editable_Grid_Desc"
      of-type="TwoOptions"
      usage="input"
      required="false"
      default-value="false" />

    <property
      name="enableFiltering"
      display-name-key="Enable_Filtering_Display"
      description-key="Enable_Filtering_Desc"
      of-type="TwoOptions"
      usage="input"
      required="false"
      default-value="true" />

    <property
      name="enableSorting"
      display-name-key="Enable_Sorting_Display"
      description-key="Enable_Sorting_Desc"
      of-type="TwoOptions"
      usage="input"
      required="false"
      default-value="true" />

    <property
      name="allowRowSelection"
      display-name-key="Allow_Row_Selection_Display"
      description-key="Allow_Row_Selection_Desc"
      of-type="TwoOptions"
      usage="input"
      required="false"
      default-value="true" />

    <property
      name="lockedColumns"
      display-name-key="Locked_Columns_Display"
      description-key="Locked_Columns_Desc"
      of-type="SingleLine.Text"
      usage="input"
      required="false" />

    <property
      name="showOpenRecordColumn"
      display-name-key="Show_Open_Record_Column_Display"
      description-key="Show_Open_Record_Column_Desc"
      of-type="TwoOptions"
      usage="input"
      required="false"
      default-value="false" />

    <!-- ====================================== -->

    <resources>
      <code path="index.ts" order="1" />
      <css path="css/HiddenSortGrid.css" order="1" />
      <resx path="strings/HiddenSortGrid.1033.resx" version="1.0.0" />
      <platform-library name="React" version="16.14.0" />
      <platform-library name="Fluent" version="9.46.2" />
    </resources>

    <feature-usage>
      <uses-feature name="Utility" required="true" />
      <uses-feature name="Utility.getEntityMetadata" required="true" />
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>
  </control>
</manifest>
